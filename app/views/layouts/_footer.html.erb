<footer id="footer">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12">
            <h3 class='text-center bold uppercase'>Renato Franco</h3>
            <p class='text-center'>Todos os direitos reservados</p>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <ul class="list-unstyled list-inline text-center">
              <li>
                <%= link_to ENV.fetch('FACEBOOK_URL'), 
                  target: :_blank do %>
                  <i class="fa-brands fa-facebook-f"></i>
                <% end %>
              </li>
              <li>
                <%= link_to ENV.fetch('INSTAGRAM_URL'), 
                  target: :_blank do %>
                  <i class="fa-brands fa-instagram"></i>
                <% end %>
              </li>
              <li>
                <%= link_to ENV.fetch('TWITTER_URL'), 
                  target: :_blank do %>
                  <i class="fa-brands fa-twitter"></i>
                <% end %>
              </li>
              <li>
                <%= link_to ENV.fetch('LINKEDIN_URL'), 
                  target: :_blank do %>
                  <i class="fa-brands fa-linkedin-in"></i>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>