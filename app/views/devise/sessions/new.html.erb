<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        
        <div class="row">
          <div class="col-md-offset-4 col-md-4">
            <div class="panel panel-default">
              <div class="panel-body">
                <h2 class='text-center bold'>Log in</h2>
                <p class='text-center'>Acesse a plataforma.</p>
                <br />

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field">
                    <%= f.label :email, 'E-mail' %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                    class: 'form-control', required: 'required', 
                    placeholder: 'Digite seu e-mail' %>
                  </div>

                  <div class="field">
                    <%= f.label :password, 'Senha' %><br />
                    <%= f.password_field :password, autocomplete: "current-password",
                    class: 'form-control', required: 'required',
                    placeholder: 'Digite sua senha' %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="field"><br />
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, 'Lembrar-me' %>
                    </div>
                  <% end %>

                  <div class="actions"><br />
                    <%= f.submit "Log in", class: 'btn btn-primary btn-lg full-wd' %>
                  </div>
                <% end %>

                <div class='text-center'><br />
                  <%= render "devise/shared/links" %>
                </div>                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

